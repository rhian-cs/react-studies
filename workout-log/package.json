{
  "name": "workout-log",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "eslint": "eslint \"src/**/*.js\"",
    "start": "concurrently \"yarn run dev:server\" \"yarn run dev:bundler\"",
    "dev:server": "cross-env NODE_PATH=./src nodemon --exec \"babel-node src/server/server.js\" --ignore .reactful.json --ignore public/",
    "dev:bundler": "webpack -w --mode=development",
    "build:react": "cross-env NODE_ENV=production webpack --progress --mode=production",
    "build:node": "babel src -d build --config-file ./babel-node.config.js --copy-files",
    "build:all": "yarn install && yarn run build:react && yarn run build:node",
    "prod:start": "cross-env NODE_ENV=production NODE_PATH=./build pm2 start -i max build/server/server.js --update-env --name workout-logProd",
    "prod:stop": "pm2 stop workout-logProd",
    "prod:reload": "pm2 reload --update-env workout-logProd",
    "prod:logs": "pm2 logs --update-env workout-logProd",
    "test": "jest",
    "verify-tests": "jest --coverage"
  },
  "jest": {
    "modulePaths": [
      "./src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.js"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "babel-loader": "^8.2.2",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "mini-css-extract-plugin": "^2.1.0",
    "morgan": "^1.10.0",
    "pm2": "^5.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.7",
    "serialize-javascript": "^6.0.0",
    "style-loader": "^3.0.0",
    "webpack": "^5.43.0",
    "webpack-chunk-hash": "^0.6.0",
    "webpack-cli": "^4.7.2"
  },
  "devDependencies": {
    "@babel/node": "^7.14.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.10",
    "prettier": "2.3.2",
    "reactful": "^3.2.4"
  }
}
